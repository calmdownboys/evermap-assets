{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "fullname": {
      "type": "string"
    },
    
    "shortname": {
      "description": "Optional. If unset, preview chip will contain only icon. Useful, when you have wide icon",
      "type": "string"
    },

    "description": {
      "type": "string"
    },

    "logoUrl": {
      "description": "If you have wide logo, you should leave shortname empty",
      "type": "string",
      "format": "uri"
    },
    
    "files": {
      "description": "An array of media files urls, presented on page of your project. It may be images, videos etc",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": {
            "type": "string"
          }
        }
      }
    },

    "whitepaperUrl": {
      "type": "string",
      "format": "uri"
    },

    "docsUrls": {
      "type": "array",
      "items": {
        "type": "object",
        "required":["url"],
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }          
        }
      }
    },

    "projectUrl": {
      "type": "string",
      "format": "uri"
    },

    "types": {
      "description": "The types of software, your project relates to",
      "type": "array",
      "items": { "$ref": "#/definitions/project-type" }
    },

    "social": {
      "description": "Links to social networks of your projects. We support only described below",
      "type": "object",
      "properties": {
        "twitter": {
          "type": "array",
          "items": { "$ref": "#/definitions/social-link" }
        },

        "discord": {
          "type": "array",
          "items": { "$ref": "#/definitions/social-link" }
        },

        "telegram": {
          "type": "array",
          "items": { "$ref": "#/definitions/social-link" }
        }
      }
    },

    "launchDate": {
      "type": "string",
      "format": "date"
    },

    "accounts": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type":"object",
          "properties": {
            "metrics":{
              "type":"array",
              "items": { "$ref": "#/definitions/address-metric" }
            }
          }
        }
      }
    },

    "keywords": {
      "description": "Keywords will help user to find your project in search !",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },

  "required": [
    "fullname",
    "description",
    "logoUrl",
    "projectUrl",
    "types",
    "launchDate"
  ],

  "definitions": {

    "address-metric": {
      "type":"string",
      "enum": [
        "tokenBalances",
        "transactionStatistics",
        "uniqueCounterParties"
      ]
    },
    
    "project-type": {
      "type": "string",
      "enum": [
        "app",
        "bridge",
        "cross-chain",
        "community",
        "dev",
        "dex",
        "defi",
        "exchange",
        "game",
        "governance",
        "launchpad",
        "lending-protocol",
        "nft",
        "payment",
        "service",
        "staking",
        "tools",
        "wallet"
      ]
    },
    
    "social-link": {
      "type": "object",
      "required": ["link"],
      "properties": {
        "link": {
          "type": "string"
        },
        "hint": {
          "type": "string"
        },
        "lang": {
          "description": "If undefined, will appear for any language",
          "type": "string"
        }
      }
    }
  }
}