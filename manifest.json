{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {

    "fullname": {
      "type": "string"
    },
    
    "shortname": {
      "description": "Optional. If unset, preview chip will contain only icon. Useful, when you have wide icon",
      "type": "string"
    },

    "description": {
      "type": "string"
    },

    "logoUrl": {
      "description": "If you have wide logo, you should leave shortname empty",
      "type": "string",
      "format": "uri"
    },
    
    "imagesUrls": {
      "description": "An array of images urls, presented on page of your project",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },

    "projectUrl": {
      "type": "string",
      "format": "uri"
    },
    
    "types": {
      "description": "The types of software, your project relates to",
      "type": "array",
      "items": {
        "enum": [
          "app",
          "cross-chain",
          "community",
          "dev",
          "dex",
          "defi",
          "exchange",
          "game",
          "governance",
          "nft",
          "payment",
          "service",
          "staking",
          "tools",
          "wallet"
        ]
      }
    },

    "social": {
      "description": "Links to social networks of your projects. We support only described below",
      "type": "object",
      "properties": {
        "twitterUrl": {
          "type": "string",
          "format": "uri"
        },

        "discordUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },

    "launchDate": {
      "type": "string",
      "format": "date"
    },

    "keywords": {
      "description": "Keywords will help user to find your project in search !",
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },

  "required": [
    "fullname",
    "description",
    "logoUrl",
    "projectUrl",
    "types",
    "social"
  ]
}